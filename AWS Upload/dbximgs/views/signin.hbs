	<script>

		function mail_done()
{
    Swal.fire({
        title: "Sign In",
        text: "Your Sign link is mailed at your registered mail id",
        icon: "success",
        button: "Okay",
        confirmButtonColor: '#4F4F4F'
      });   
}
function mail_notdone()
{
	 Swal.fire({
        title: "Not Registered",
        text: "Please register at Enigma.Fluxus.co.in",
        icon: "error",
        button: "Okay",
        confirmButtonColor: '#4F4F4F'
      }); 
}
function start()
{
	if( {{func}} == 1)
	{
		mail_done();
	}
	else if ( {{func}} == 0)
	{
		mail_notdone();
	}
}
